{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@generator/*": ["../../src/*"],
      "@helpers/*": ["./helpers/*"],
      "@fixtures/*": ["../fixtures/*"]
    }
  },
  "include": [
    "**/*.ts",
    "../fixtures/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
